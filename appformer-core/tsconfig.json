{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "jsx": "react"
  },

  "exclude": ["node_modules", "src/__tests__"],
  "include": ["src"]
}
